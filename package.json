{
  "name": "pir-demo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run build",
    "start": "NODE_ENV=production node index",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm-run-all -p -r -l watch:css watch:assets watch:js start",
    "watch": "npm-run-all -p -r -l watch:css watch:assets watch:js",
    "watch:assets": "watch \"npm run build:assets\" client/public",
    "watch:css": "./node_modules/.bin/node-sass --watch --output-style=compressed client/scss/main.scss dist/css/styles.css",
    "watch:js": "./node_modules/.bin/webpack --watch --progress --colors --config client/webpack.config.js",
    "build": "npm-run-all build:js build:css build:assets",
    "build:assets": "cp -R client/public/* dist/",
    "build:css": "./node_modules/.bin/node-sass --output-style=compressed client/scss/main.scss dist/css/styles.css",
    "build:js": "./node_modules/.bin/webpack --progress --colors --config client/webpack.config.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-airbnb": "^2.4.0",
    "babel-preset-es2015": "^6.24.1",
    "bluebird": "^3.5.1",
    "eslint": "^4.16.0",
    "express": "^4.16.2",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "webpack": "^3.10.0",
    "websocket": "^1.0.25",
    "winston": "^2.4.0",
    "ws": "^4.0.0"
  }
}
